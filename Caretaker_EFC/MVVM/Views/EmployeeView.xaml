            <Button Command="{Binding GoToEmployeeListCommand}" Content="&#xf1ad;" Style="{StaticResource navButton}" BorderThickness="0" />
            <Button Command="{Binding GoToSpecEmployeeCommand}" Content="&#xf274;" Style="{StaticResource navButton}" BorderThickness="0" />
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:AddEmployeeViewModel}">
                    <views:AddEmployeeView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:AllListsViewModel}">
                    <views:ListView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:SpecEmployeeViewModel}">
                    <views:EmployeeView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>


